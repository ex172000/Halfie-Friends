<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/layer0"
        android:layout_height="match_parent">
        <FrameLayout
    	   	android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/camera_preview4"
            android:adjustViewBounds="true"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/layer1"
        android:layout_height="match_parent">
    	<RelativeLayout
        	android:layout_width="0dp"
        	android:layout_height="match_parent"
        	android:layout_weight="0.5"
        	android:id="@+id/left1"
        	android:background="@drawable/back_left">
        	<LinearLayout
        		android:layout_width="match_parent"
        		android:layout_height="match_parent"
        		android:gravity="center"
        		android:orientation="vertical" >
        		<Button
            		android:id="@+id/sun"
            		android:layout_width="122dp"
            		android:layout_height="122dp"
            		android:layout_marginTop="60dp"
            		android:layout_marginRight="40dp"
            		android:background="@drawable/sun"
            		android:layout_marginBottom="100dp"/>
        	</LinearLayout>
        	<LinearLayout
        		android:layout_width="match_parent"
        		android:layout_height="match_parent"
        		android:gravity="center"
        		android:orientation="vertical" >
        		<Button
            		android:id="@+id/hmm"
            		android:layout_width="157dp"
            		android:layout_height="117dp"
            		android:layout_marginTop="45dp"
            		android:layout_marginLeft="20dp"
            		android:background="@drawable/hmm"
            		android:layout_marginBottom="0dp"/>
        	</LinearLayout>
    	    <FrameLayout
    	    	android:layout_width="match_parent"
            	android:layout_height="match_parent"
            	android:id="@+id/camera_preview"
            	android:adjustViewBounds="true"
            	android:visibility="gone"/>
        	<ImageView
            	android:layout_width="match_parent"
            	android:layout_height="match_parent"
            	android:id="@+id/imgPreview"
            	android:adjustViewBounds="true"
            	android:visibility="gone"/>
    	</RelativeLayout>
    	<RelativeLayout
        	android:layout_width="0dp"
        	android:layout_height="match_parent"
        	android:layout_weight="0.5"
        	android:id="@+id/right1"
        	android:background="@drawable/back_right">
        	<FrameLayout
    	    	android:layout_width="match_parent"
            	android:layout_height="match_parent"
            	android:id="@+id/camera_preview2"
            	android:adjustViewBounds="true"/>
        	<ImageView
            	android:layout_width="match_parent"
            	android:layout_height="match_parent"
            	android:id="@+id/imgPreview2"
            	android:adjustViewBounds="true"
            	android:visibility="gone"/>
        </RelativeLayout>
	</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <!-- Capture picture button -->
        <Button
            android:id="@+id/btnCapturePicture"
            android:layout_width="124dp"
            android:layout_height="124dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:background="@drawable/take_pic"
            android:layout_marginBottom="0dp"/>
        <!-- Preview picture button -->
        <Button
            android:id="@+id/btnPreviewPicture"
            android:layout_width="124dp"
            android:layout_height="124dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/choose_pic"/>
        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="124dp"
            android:layout_height="124dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:background="@drawable/save"
            android:visibility="gone"/>
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="124dp"
            android:layout_height="67dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-300dp"
            android:background="@drawable/back"
            android:visibility="gone"/>
    </LinearLayout>
    

    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/layer3"
        android:visibility="gone"
        android:background="#000000">
    	<LinearLayout
        	android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:layout_weight="1"
        	android:background="#ffffff">
        	<ImageView
            	android:layout_width="match_parent"
            	android:layout_height="match_parent"
            	android:id="@+id/imgPreview3"
            	android:adjustViewBounds="true"
            	/>
    	</LinearLayout>
    	<LinearLayout
        	android:orientation="vertical"
        	android:layout_width="fill_parent"
        	android:layout_height="fill_parent"
        	android:layout_weight="1"
        	>
    		<LinearLayout
        		android:layout_width="match_parent"
        		android:layout_height="match_parent"
        		android:layout_weight="1"
        		android:background="#00ff00">
        		<Button
            		android:id="@+id/btnSave"
            		android:layout_width="match_parent"
            		android:layout_height="match_parent"
            		android:text="Save"
            		/>
        	</LinearLayout>
			<LinearLayout
        		android:layout_width="match_parent"
        		android:layout_height="match_parent"
        		android:layout_weight="1"
        		android:background="#ff0000">
        		<Button
            		android:id="@+id/btnFCancel"
            		android:layout_width="match_parent"
            		android:layout_height="match_parent"
            		android:text="Cancel"
            	/>
        	</LinearLayout>	
		</LinearLayout>	
	</LinearLayout>

</FrameLayout>